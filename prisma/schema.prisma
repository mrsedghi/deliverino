// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  COURIER
  ADMIN
}

enum VehicleType {
  WALKING
  SCOOTER
  BICYCLE
  MOTORCYCLE
  CAR
}

enum DeliveryMode {
  STANDARD
  EXPRESS
  SCHEDULED
}

enum OrderStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  PICKED_UP
  IN_TRANSIT
  DELIVERED
  CANCELLED
  FAILED
  DISPATCHING
  ESCALATE
}

enum PaymentMethod {
  CASH
  CARD
}

enum OfferStatus {
  OFFERED
  ACCEPTED
  REJECTED
  EXPIRED
  CANCELLED
}

model User {
  id        String   @id @default(cuid())
  phone     String   @unique
  fullName  String   @map("name")
  nationalCode String? @unique
  role      UserRole @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  ordersAsCustomer Order[]  @relation("CustomerOrders")
  courierProfile   Courier?

  @@map("users")
}

model Courier {
  id          String      @id @default(cuid())
  userId      String      @unique
  vehicleType VehicleType
  active      Boolean     @default(true)
  locationLat Float?
  locationLng Float?
  rating      Float?      @default(0)

  // Relations
  user   User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]      @relation("CourierOrders")
  offers OrderOffer[]

  @@map("couriers")
}

model Order {
  id          String       @id @default(cuid())
  customerId  String
  courierId   String?
  originLat   Float
  originLng   Float
  destLat     Float
  destLng     Float
  distanceKm Float?
  durationMin Int?
  mode        DeliveryMode @default(STANDARD)
  fare        Float?
  status      OrderStatus  @default(PENDING)
  notes       String?
  weightKg    Float?
  paymentMethod PaymentMethod @default(CASH)
  paid        Boolean      @default(false)
  paidAt      DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  customer User    @relation("CustomerOrders", fields: [customerId], references: [id], onDelete: Cascade)
  courier  Courier? @relation("CourierOrders", fields: [courierId], references: [id], onDelete: SetNull)
  offers   OrderOffer[]

  @@map("orders")
}

model OrderOffer {
  id        String      @id @default(cuid())
  orderId   String
  courierId String
  status    OfferStatus @default(OFFERED)
  expiresAt DateTime
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  courier Courier @relation(fields: [courierId], references: [id], onDelete: Cascade)

  @@unique([orderId, courierId])
  @@map("order_offers")
}

model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value Json

  @@map("settings")
}

